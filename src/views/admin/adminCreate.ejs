<%- include('../partials/header') %>
<main id="create" class="createContainer">
    <h2 class="createTitle">CREAR NUEVO ITEM</h2>
    <form class="create__form" action="/admin/create" method="POST" enctype="multipart/form-data">
        <div class="topinputContainer">
            <div class="topinputForm">
                <label class="form__label" for="category">Categoría:</label>
                <select class="formtopSelect" name="category" id="category" required>
                    <option value="" disabled selected hidden>Seleccionar</option>
                        <%categoryArray.forEach(category_name=>{%>
                    <option value=""><%=categoryArray%></option>
                        <%})%>
                </select>
            </div>
            <div class="topinputForm">
                <label class="form__label" for="collection">Licencia:</label>
                <select class="formbottomSelect" name="collection" id="collection" required>
                    <option value="" disabled selected hidden>Seleccionar</option>
                        <%licenceArray.forEach(licence_name=>{%>
                    <option value=""><%=licence_name%></option>
                        <%})%>
                </select>
            </div>
        </div>
        <div class="form__box--flex">
            <label class="forminputName" for="name">Nombre del producto:</label>
            <input class="form__input aa" type="text" name="name" id="name" placeholder="Kakashi Hatake Shippuden Saga" required>
        </div>
        <div>
            <textarea name="descriptionCreate" id="description" cols="82" rows="10" placeholder="Descripción del producto" required></textarea>
        </div>
        <div class="bottominputForm">
            <div class="form__box--flex">
                <label class="form__labelBottom" for="sku">SKU:</label>
                <input class="form__input" type="text" name="sku" id="sku" placeholder="SSK111AB001" required>
            </div>
            <div class="form__box--flex">
                <label class="form__labelBottom" for="price">Precio:</label>
                <div class="form__input--wrapper"><span>$</span><input class="form__input bb" type="text" name="price" id="price" data-type="currency" placeholder="0.000,00"></div>
            </div>
            <div class="form__box--flex">
                <label class="form__labelBottom" for="stock">Stock:</label>
                <div class="form__input--wrapper"><input class="form__input cc" type="text" name="stock" id="stock" placeholder="0" required></div>
            </div>
        </div>
        <div class="form__flex">
            <div class="form__box--flex">
                <label class="form__labelBottom" for="discount">Descuento:</label>
                <div class="form__input--wrapper"><input class="form__input dd" type="text" name="discount" id="discount" placeholder="0" required><span>%</span></div>
            </div>
            <div class="form__box--flex">
                <label class="form__labelBottom" for="dues">Cuotas:</label>
                <select class="form__select" name="dues" id="dues">
                    <option value="0">Sin cuotas</option>
                    <option value="3">3 cuotas s/ interés</option>
                    <option value="6">6 cuotas s/ interés</option>
                    <option value="9">9 cuotas s/ interés</option>
                    <option option value="12">12 cuotas s/ interés</option>
                    <option value="18">18 cuotas s/ interés</option>
                    <option value="24">24 cuotas s/ interés</option>
                </select>
            </div>
        </div>
        <div class="form__box--flex">
            <label class="form__labelImgBottom" for="images">Imagenes:</label>
            <input class="inputFile" type="file" name="images" id="img" multiple>
        </div>
        <div class="form__flex">
            <input class="form__btn btn btn--primary" type="submit" value="Agregar Producto">
            <input class="form__btn btn btn--primary" type="reset" value="Limpiar">
        </div>
    </form>
</main>
<%- include('../partials/footer') %>